{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-gallery-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-gallery-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-gallery-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-product-gallery-item-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_ratio }};
    overflow: hidden;
    cursor: pointer;
    background-color: #f5f5f5;
  }

  .ai-product-gallery-item-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-gallery-item-{{ ai_gen_id }}:hover img {
    transform: scale(1.05);
  }

  .ai-product-gallery-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
    position: relative;
  }

  .ai-product-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-gallery-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-gallery-modal-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    align-items: center;
    justify-content: center;
    padding: 20px;
  }

  .ai-product-gallery-modal-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-product-gallery-modal-content-{{ ai_gen_id }} {
    position: relative;
    max-width: 90%;
    max-height: 90%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-gallery-modal-image-{{ ai_gen_id }} {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
  }

  .ai-product-gallery-close-{{ ai_gen_id }} {
    position: absolute;
    top: -40px;
    right: 0;
    background: none;
    border: none;
    color: #ffffff;
    font-size: 40px;
    cursor: pointer;
    padding: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease;
  }

  .ai-product-gallery-close-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-product-gallery-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: #ffffff;
    font-size: 30px;
    cursor: pointer;
    padding: 20px;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .ai-product-gallery-nav-{{ ai_gen_id }}:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .ai-product-gallery-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-product-gallery-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-product-gallery-counter-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #ffffff;
    font-size: 14px;
    background: rgba(0, 0, 0, 0.5);
    padding: 8px 16px;
    border-radius: 20px;
  }

  @media screen and (max-width: 989px) {
    .ai-product-gallery-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-gallery-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.gap | times: 0.5 }}px;
    }

    .ai-product-gallery-nav-{{ ai_gen_id }} {
      width: 50px;
      height: 50px;
      font-size: 24px;
      padding: 15px;
    }

    .ai-product-gallery-prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-product-gallery-next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

<product-gallery-{{ ai_gen_id }} class="ai-product-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-gallery-container-{{ ai_gen_id }}">
    <div class="ai-product-gallery-grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign image = block.settings[image_key]
        %}
        
        {% if image != blank %}
          <div class="ai-product-gallery-item-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
            <img
              src="{{ image | image_url: width: 800 }}"
              alt="{{ image.alt | escape }}"
              loading="lazy"
              width="{{ image.width }}"
              height="{{ image.height }}"
            >
          </div>
        {% elsif forloop.index == 1 %}
          <div class="ai-product-gallery-item-{{ ai_gen_id }}">
            <div class="ai-product-gallery-placeholder-{{ ai_gen_id }}">
              {{ 'product-1' | placeholder_svg_tag }}
              <div class="ai-product-gallery-empty-state-{{ ai_gen_id }}">
                Add images to gallery
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="ai-product-gallery-modal-{{ ai_gen_id }}" role="dialog" aria-modal="true" aria-label="Image gallery">
    <div class="ai-product-gallery-modal-content-{{ ai_gen_id }}">
      <button class="ai-product-gallery-close-{{ ai_gen_id }}" aria-label="Close gallery">×</button>
      <button class="ai-product-gallery-nav-{{ ai_gen_id }} ai-product-gallery-prev-{{ ai_gen_id }}" aria-label="Previous image">‹</button>
      <img class="ai-product-gallery-modal-image-{{ ai_gen_id }}" src="" alt="">
      <button class="ai-product-gallery-nav-{{ ai_gen_id }} ai-product-gallery-next-{{ ai_gen_id }}" aria-label="Next image">›</button>
      <div class="ai-product-gallery-counter-{{ ai_gen_id }}"></div>
    </div>
  </div>
</product-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.images = [];
        this.currentIndex = 0;
      }

      connectedCallback() {
        this.modal = this.querySelector('.ai-product-gallery-modal-{{ ai_gen_id }}');
        this.modalImage = this.querySelector('.ai-product-gallery-modal-image-{{ ai_gen_id }}');
        this.closeBtn = this.querySelector('.ai-product-gallery-close-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-product-gallery-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-product-gallery-next-{{ ai_gen_id }}');
        this.counter = this.querySelector('.ai-product-gallery-counter-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-product-gallery-item-{{ ai_gen_id }}');

        this.collectImages();
        this.setupEventListeners();
      }

      collectImages() {
        this.items.forEach((item) => {
          const img = item.querySelector('img');
          if (img && !item.querySelector('.ai-product-gallery-placeholder-{{ ai_gen_id }}')) {
            this.images.push({
              src: img.src.replace(/width=\d+/, 'width=2000'),
              alt: img.alt
            });
          }
        });
      }

      setupEventListeners() {
        this.items.forEach((item, index) => {
          const img = item.querySelector('img');
          if (img && !item.querySelector('.ai-product-gallery-placeholder-{{ ai_gen_id }}')) {
            item.addEventListener('click', () => {
              this.openModal(index);
            });
          }
        });

        this.closeBtn.addEventListener('click', () => this.closeModal());
        this.prevBtn.addEventListener('click', () => this.navigate(-1));
        this.nextBtn.addEventListener('click', () => this.navigate(1));

        this.modal.addEventListener('click', (e) => {
          if (e.target === this.modal) {
            this.closeModal();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (!this.modal.classList.contains('active')) return;
          
          if (e.key === 'Escape') {
            this.closeModal();
          } else if (e.key === 'ArrowLeft') {
            this.navigate(-1);
          } else if (e.key === 'ArrowRight') {
            this.navigate(1);
          }
        });
      }

      openModal(index) {
        if (this.images.length === 0) return;
        
        this.currentIndex = index;
        this.updateModal();
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }

      navigate(direction) {
        this.currentIndex = (this.currentIndex + direction + this.images.length) % this.images.length;
        this.updateModal();
      }

      updateModal() {
        const image = this.images[this.currentIndex];
        this.modalImage.src = image.src;
        this.modalImage.alt = image.alt;
        this.counter.textContent = `${this.currentIndex + 1} / ${this.images.length}`;
      }
    }

    customElements.define('product-gallery-{{ ai_gen_id }}', ProductGallery{{ ai_gen_id }});
  })();
</script>

