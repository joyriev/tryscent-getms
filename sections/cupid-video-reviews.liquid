<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.cupids-video-slider', {
      slidesPerView: 1.5,
      spaceBetween: 20,
      breakpoints: {
        768: {
          slidesPerView: 4,
          spaceBetween: 20
        }
      }
    });
  });
</script>

{% schema %}
  {
    "name": "Cupid Video Reviews",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 72
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 72
      }, {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#FFFFFF"
      }
    ],
    "presets": [
      {
        "name": "Cupid Video Reviews"
      }
    ]
  }
{% endschema %}