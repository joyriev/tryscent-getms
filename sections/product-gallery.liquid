<section id="GallerySection-{{ section.id }}" class="gallery-slider-section"
         style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;
                background-color: {{ section.settings.background_color }};">
  <div class="gallery-slider-container" style="max-width: {{ section.settings.max_width }}px; margin: 0 auto;">
    <div class="gallery-slider" data-flickity='{
         "wrapAround": true,
         "cellAlign": "center",
         "contain": true,
         "pageDots": {{ section.settings.page_dots }},
         "prevNextButtons": {{ section.settings.nav_buttons }},
         "lazyLoad": 2
       }'>
      {%- for block in section.blocks -%}
        <div class="gallery-slide" {{ block.shopify_attributes }}
             style="width: {{ section.settings.slide_width }}%;">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: 'master' }}"
                 alt="{{ block.settings.alt | escape }}"
                 loading="lazy"
                 style="width:100%; display:block; border-radius:{{ section.settings.border_radius }}px;" />
          {% endif %}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% style %}
.gallery-slider-section {
  position: relative;
}
.gallery-slider .gallery-slide {
  padding: 0 {{ section.settings.slide_spacing }}px;
  box-sizing: border-box;
}
.flickity-page-dots {
  bottom: -30px;
}
{% endstyle %}

{% schema %}
{
  "name": "Product Gallery",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background colour",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Container max width (px)",
      "min": 600,
      "max": 3000,
      "step": 50,
      "unit": "px",
      "default": 1400
    },
    {
      "type": "range",
      "id": "slide_width",
      "label": "Slide width (% of container)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 70
    },
    {
      "type": "range",
      "id": "slide_spacing",
      "label": "Spacing between slides (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Image border radius (px)",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "page_dots",
      "label": "Show page dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "nav_buttons",
      "label": "Show prev/next buttons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Product Gallery",
      "category": "Media"
    }
  ]
}
{% endschema %}
