<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<section id="GallerySection-{{ section.id }}" class="gallery-slider-section"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; background-color: {{ section.settings.background_color }};">

  <div class="gallery-slider-container" style="max-width: {{ section.settings.max_width }}px; margin: 0 auto;">
    <div class="gallery-slider">
      {%- for block in section.blocks -%}
        <div class="gallery-slide" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="gallery-slide-inner">
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.alt | escape }}"
                loading="lazy"
              >
            </div>
          {% endif %}
        </div>
      {%- endfor -%}
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var $gallery = $('#GallerySection-{{ section.id }} .gallery-slider');
      if ($gallery.length && !$gallery.hasClass('slick-initialized')) {
        $gallery.slick({
          centerMode: true,
          centerPadding: '25%',
          slidesToShow: 1,
          infinite: true,
          arrows: {{ section.settings.nav_buttons }},
          dots: {{ section.settings.page_dots }},
          autoplay: {{ section.settings.autoplay }},
          autoplaySpeed: {{ section.settings.autoplay_speed }},
          adaptiveHeight: false,
          variableWidth: false,
          responsive: [
            {
              breakpoint: 768,
              settings: { centerPadding: '10%' }
            },
            {
              breakpoint: 480,
              settings: { centerPadding: '5%' }
            }
          ]
        });
      }
    });
  </script>
</section>

{% style %}
.gallery-slider-section {
  overflow: hidden;
}
.gallery-slider {
  display: flex;
  align-items: stretch;
}
.gallery-slide {
  padding: 0 {{ section.settings.slide_spacing }}px;
  display: flex !important;
  justify-content: center;
  align-items: center;
  height: auto;
}
.gallery-slide-inner {
  position: relative;
  width: 450px;
  height: 100%;
  min-height: 500px; /* âœ… Adjust to your preferred min height */
  display: flex;
  justify-content: center;
  align-items: center;
}
.gallery-slide-inner img{
  width:100%;
}

.gallery-slider-container .slick-center img {
  opacity: 1;
}
.gallery-slider-container .slick-slide {
  display: flex;
  align-items: center;
  justify-content: center;
}
.gallery-slider-container .slick-track{
  display:flex;
}
{% endstyle %}

{% schema %}
{
  "name": "Product Gallery",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background colour",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom (px)",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Container max width (px)",
      "min": 600,
      "max": 3000,
      "step": 50,
      "unit": "px",
      "default": 1400
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Image border radius (px)",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "slide_spacing",
      "label": "Spacing between slides (px)",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "center_padding",
      "label": "Side image visibility (%)",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "%",
      "default": 15
    },
    {
      "type": "checkbox",
      "id": "page_dots",
      "label": "Show page dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "nav_buttons",
      "label": "Show prev/next arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": false
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay speed (ms)",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 4000
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt",
          "label": "Alt text"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Product Gallery",
      "category": "Media"
    }
  ]
}
{% endschema %}
