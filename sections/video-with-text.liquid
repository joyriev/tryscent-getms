<section
  id="{{ section.id }}"
  class="video-with-text"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  "
>
  <div class="video-with-text__inner container {% if section.settings.layout == 'reverse' %}video-with-text__reverse{% endif %}">
    {%- for block in section.blocks -%}
      <div class="video-with-text__block video-with-text__block--{{ block.type }}" {{ block.shopify_attributes }}>
        {%- case block.type -%}

          {%- when 'content' -%}
            <div class="video-with-text__media">
              {%- if block.settings.video_url != blank -%}
                <div class="video-with-text__video-wrapper">
                  <iframe
                    src="{{ block.settings.video_url }}"
                    frameborder="0"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    loading="lazy"
                  ></iframe>
                </div>
              {%- endif -%}
            </div>

            <div class="video-with-text__text">
              {%- if block.settings.eyebrow != blank -%}
                <p class="video-with-text__eyebrow">{{ block.settings.eyebrow }}</p>
              {%- endif -%}
              {%- if block.settings.heading != blank -%}
                <h2 class="video-with-text__heading">{{ block.settings.heading }}</h2>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <div class="video-with-text__desc">{{ block.settings.description }}</div>
              {%- endif -%}
              {%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
                <a href="{{ block.settings.button_link }}" class="video-with-text__btn">
                  {{ block.settings.button_text }}
                </a>
              {%- endif -%}
            </div>

        {%- endcase -%}
      </div>
    {%- endfor -%}
  </div>

  {%- style -%}
  .video-with-text {
    width: 100%;
  }
  .video-with-text__inner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }
  .video-with-text__reverse {
    flex-direction: row-reverse;
  }
  .video-with-text__media iframe {
    width: 100%;
    max-width: 600px;
    aspect-ratio: 16 / 9;
    border: none;
    border-radius: 10px;
  }
  .video-with-text__text {
    max-width: 500px;
  }
  .video-with-text__eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    color: #777;
    margin-bottom: 0.5rem;
  }
  .video-with-text__heading {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  .video-with-text__desc {
    color: #444;
    margin-bottom: 1.5rem;
  }
  .video-with-text__btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: #111;
    color: #fff;
    border-radius: 5px;
    text-decoration: none;
  }
  {%- endstyle -%}
</section>

{% schema %}
{
  "name": "Video with text",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 60
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout direction",
      "options": [
        { "value": "normal", "label": "Video left, text right" },
        { "value": "reverse", "label": "Video right, text left" }
      ],
      "default": "normal"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Video + text block",
      "settings": [
        {
          "type": "text",
          "id": "video_url",
          "label": "Video URL (YouTube or Vimeo embed)"
        },
        {
          "type": "text",
          "id": "eyebrow",
          "label": "Eyebrow text"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "max_blocks": 1,
  "presets": [
    {
      "name": "Video with text",
      "category": "Custom"
    }
  ]
}
{% endschema %}
