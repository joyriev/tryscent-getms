{%- style -%}
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 1.25rem));
    }
  }

  @keyframes scrollReverse {
    from {
      transform: translateX(calc(-100% - 1.25rem));
    }
    to {
      transform: translateX(0);
    }
  }

  .animate-scroll {
    animation: scroll 60s linear infinite;
  }

  .animate-scroll-reverse {
    animation: scrollReverse 60s linear infinite;
  }

  .marquee:hover .animate-scroll,
  .marquee:hover .animate-scroll-reverse {
    animation-play-state: paused;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding overflow-hidden"
  style="background-color: {{ section.settings.background_color }}; padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px">

  <!-- First Marquee (Original Direction) - First 9 images -->
  <div class="marquee w-full overflow-hidden mb-8">
    <div class="flex gap-5 animate-scroll">
      {% for i in (1..9) %}
        <div class="flex-shrink-0 size-28 md:size-48 overflow-hidden">
          <img
            src="https://cdn.shopify.com/s/files/1/0086/7932/5753/files/ugc{{ i }}.png"
            alt="UGC Image {{ i }}"
            loading="lazy"
            width="200"
            height="200"
            class="w-full h-full object-cover">
        </div>
      {% endfor %}
      {% for i in (1..9) %}
        <div class="flex-shrink-0 size-28 md:size-48 overflow-hidden">
          <img
            src="https://cdn.shopify.com/s/files/1/0086/7932/5753/files/ugc{{ i }}.png"
            alt="UGC Image {{ i }}"
            loading="lazy"
            width="200"
            height="200"
            class="w-full h-full object-cover">
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Second Marquee (Reverse Direction) - Images 10-18 -->
  <div class="marquee w-full overflow-hidden">
    <div class="flex gap-5 animate-scroll-reverse">
      {% for i in (10..18) %}
        <div class="flex-shrink-0 size-28 md:size-48 overflow-hidden">
          <img
            src="https://cdn.shopify.com/s/files/1/0086/7932/5753/files/ugc{{ i }}.png"
            alt="UGC Image {{ i }}"
            loading="lazy"
            width="200"
            height="200"
            class="w-full h-full object-cover">
        </div>
      {% endfor %}
      {% for i in (10..18) %}
        <div class="flex-shrink-0 size-28 md:size-48 overflow-hidden">
          <img
            src="https://cdn.shopify.com/s/files/1/0086/7932/5753/files/ugc{{ i }}.png"
            alt="UGC Image {{ i }}"
            loading="lazy"
            width="200"
            height="200"
            class="w-full h-full object-cover">
        </div>
      {% endfor %}
    </div>
  </div>
</div>

