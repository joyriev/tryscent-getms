    opacity: 0.7;
  }

  .ai-product-gallery-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: #ffffff;
    font-size: 30px;
    cursor: pointer;
