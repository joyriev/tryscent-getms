<product-gallery-{{ ai_gen_id }} class="ai-product-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-gallery-container-{{ ai_gen_id }}">
    <div class="ai-product-gallery-slider-wrapper-{{ ai_gen_id }}">
      <button class="ai-product-gallery-arrow-{{ ai_gen_id }} ai-product-gallery-arrow-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18l-6-6 6-6"/>
        </svg>
      </button>
      
      <div class="ai-product-gallery-slider-{{ ai_gen_id }}">
        {% for i in (1..12) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign image = block.settings[image_key]
          %}
          
          {% if image != blank %}
            <div class="ai-product-gallery-item-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            </div>
          {% elsif forloop.index == 1 %}
            <div class="ai-product-gallery-item-{{ ai_gen_id }}">
              <div class="ai-product-gallery-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
                <div class="ai-product-gallery-empty-state-{{ ai_gen_id }}">
                  Add images to gallery
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <button class="ai-product-gallery-arrow-{{ ai_gen_id }} ai-product-gallery-arrow-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M9 18l6-6-6-6"/>
        </svg>
      </button>
    </div>

    {% if block.settings.show_dots %}
      <div class="ai-product-gallery-dots-{{ ai_gen_id }}"></div>
    {% endif %}
  </div>

  <div class="ai-product-gallery-modal-{{ ai_gen_id }}" role="dialog" aria-modal="true" aria-label="Image gallery">
    <div class="ai-product-gallery-modal-content-{{ ai_gen_id }}">
      <button class="ai-product-gallery-close-{{ ai_gen_id }}" aria-label="Close gallery">×</button>
      <button class="ai-product-gallery-nav-{{ ai_gen_id }} ai-product-gallery-modal-prev-{{ ai_gen_id }}" aria-label="Previous image">‹</button>
      <img class="ai-product-gallery-modal-image-{{ ai_gen_id }}" src="" alt="">
      <button class="ai-product-gallery-nav-{{ ai_gen_id }} ai-product-gallery-modal-next-{{ ai_gen_id }}" aria-label="Next image">›</button>
      <div class="ai-product-gallery-counter-{{ ai_gen_id }}"></div>
    </div>
  </div>
</product-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.images = [];
        this.currentIndex = 0;
        this.currentSlide = 0;
      }

      connectedCallback() {
        this.slider = this.querySelector('.ai-product-gallery-slider-{{ ai_gen_id }}');
        this.prevArrow = this.querySelector('.ai-product-gallery-arrow-prev-{{ ai_gen_id }}');
        this.nextArrow = this.querySelector('.ai-product-gallery-arrow-next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-product-gallery-dots-{{ ai_gen_id }}');
        this.modal = this.querySelector('.ai-product-gallery-modal-{{ ai_gen_id }}');
        this.modalImage = this.querySelector('.ai-product-gallery-modal-image-{{ ai_gen_id }}');
        this.closeBtn = this.querySelector('.ai-product-gallery-close-{{ ai_gen_id }}');
        this.modalPrevBtn = this.querySelector('.ai-product-gallery-modal-prev-{{ ai_gen_id }}');
        this.modalNextBtn = this.querySelector('.ai-product-gallery-modal-next-{{ ai_gen_id }}');
        this.counter = this.querySelector('.ai-product-gallery-counter-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-product-gallery-item-{{ ai_gen_id }}');

        this.collectImages();
        this.setupSlider();
        this.setupModal();
      }

      collectImages() {
        this.items.forEach((item) => {
          const img = item.querySelector('img');
          if (img && !item.querySelector('.ai-product-gallery-placeholder-{{ ai_gen_id }}')) {
            this.images.push({
              src: img.src.replace(/width=\d+/, 'width=2000'),
              alt: img.alt
            });
          }
        });
      }

      setupSlider() {
        if (this.images.length === 0) return;

        this.prevArrow.addEventListener('click', () => this.slide(-1));
        this.nextArrow.addEventListener('click', () => this.slide(1));

        this.slider.addEventListener('scroll', () => {
          this.updateArrows();
          this.updateDots();
        });

        if (this.dotsContainer) {
          this.createDots();
        }

        this.updateArrows();
      }

      slide(direction) {
        const itemWidth = this.items[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.slider).gap);
        const scrollAmount = (itemWidth + gap) * direction;
        
        this.slider.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      }

      updateArrows() {
        const isAtStart = this.slider.scrollLeft <= 0;
        const isAtEnd = this.slider.scrollLeft >= this.slider.scrollWidth - this.slider.clientWidth - 1;

        if (isAtStart) {
          this.prevArrow.classList.add('disabled');
        } else {
          this.prevArrow.classList.remove('disabled');
        }

        if (isAtEnd) {
          this.nextArrow.classList.add('disabled');
        } else {
          this.nextArrow.classList.remove('disabled');
        }
      }

      createDots() {
        const totalSlides = Math.ceil(this.images.length / this.getVisibleItems());
        
        for (let i = 0; i < totalSlides; i++) {
          const dot = document.createElement('button');
          dot.classList.add('ai-product-gallery-dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }

        this.updateDots();
      }

      getVisibleItems() {
        const width = window.innerWidth;
        if (width <= 749) {
          return parseInt('{{ block.settings.columns_mobile }}');
        } else if (width <= 989) {
          return 2;
        } else {
          return {{ block.settings.columns_desktop }};
        }
      }

      goToSlide(index) {
        const itemWidth = this.items[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.slider).gap);
        const visibleItems = this.getVisibleItems();
        const scrollPosition = index * (itemWidth + gap) * visibleItems;
        
        this.slider.scrollTo({
          left: scrollPosition,
          behavior: 'smooth'
        });
      }

      updateDots() {
        if (!this.dotsContainer) return;

        const dots = this.dotsContainer.querySelectorAll('.ai-product-gallery-dot-{{ ai_gen_id }}');
        const itemWidth = this.items[0].offsetWidth;
        const gap = parseInt(getComputedStyle(this.slider).gap);
        const visibleItems = this.getVisibleItems();
        const currentSlide = Math.round(this.slider.scrollLeft / ((itemWidth + gap) * visibleItems));

        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      setupModal() {
        this.items.forEach((item, index) => {
          const img = item.querySelector('img');
          if (img && !item.querySelector('.ai-product-gallery-placeholder-{{ ai_gen_id }}')) {
            item.addEventListener('click', () => {
              this.openModal(index);
            });
          }
        });

        this.closeBtn.addEventListener('click', () => this.closeModal());
        this.modalPrevBtn.addEventListener('click', () => this.navigateModal(-1));
        this.modalNextBtn.addEventListener('click', () => this.navigateModal(1));

        this.modal.addEventListener('click', (e) => {
          if (e.target === this.modal) {
            this.closeModal();
          }
        });

        document.addEventListener('keydown', (e) => {
          if (!this.modal.classList.contains('active')) return;
          
          if (e.key === 'Escape') {
            this.closeModal();
          } else if (e.key === 'ArrowLeft') {
            this.navigateModal(-1);
          } else if (e.key === 'ArrowRight') {
            this.navigateModal(1);
          }
        });
      }

      openModal(index) {
        if (this.images.length === 0) return;
        
        this.currentIndex = index;
        this.updateModalImage();
        this.modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeModal() {
        this.modal.classList.remove('active');
        document.body.style.overflow = '';
      }

      navigateModal(direction) {
        this.currentIndex = (this.currentIndex + direction + this.images.length) % this.images.length;
        this.updateModalImage();
      }

      updateModalImage() {
        const image = this.images[this.currentIndex];
        this.modalImage.src = image.src;
        this.modalImage.alt = image.alt;
        this.counter.textContent = `${this.currentIndex + 1} / ${this.images.length}`;
      }
    }

    customElements.define('product-gallery-{{ ai_gen_id }}', ProductGallery{{ ai_gen_id }});
  })();
</script>

